{
  "manifest_version": 2,
  "name": "Slack Exporter",
  "description": "Export your chat history on Slack",
  "version": "0.2",
  "browser_action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "scripts": [
      "vendor/dropbox.js",
      "src/background.js"
    ]
  },
  "permissions": [
    "https://*.slack.com/*",
    "webNavigation",
    "storage",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    "src/slack-spy.js",
    "src/dropbox/oauth-receiver.html",
    "src/dropbox/receiver.js"
  ],
  "externally_connectable": {
    "matches": ["https://*.slack.com/*"]
  }
}
